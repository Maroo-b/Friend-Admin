<!DOCTYPE html>
<html>
  <head>
    <title>FriendAdmin</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render "flashes" %>
    <h3 class="center-align welcome">Friend Admin</h3>
    <div class="container">
      <div class="row">
        <div class="col s6 offset-s3">
          <%= form_tag sessions_path do %>
            <div class="input-field">
              <%= label_tag(:email, "Email") %>
              <%= text_field_tag(:email) %>
            </div>
            <div class="input-field">
              <%= label_tag(:password) %>
              <%= password_field_tag(:password) %>
            </div>
            <div class="input-field col s6 offset-s3">
              <%= submit_tag "Log in", class: "waves-effect waves-light btn fill-parent" %>
            </div>
          <% end %>
        </div>
      </div><!--row -->
    </div><!-- container -->
  </body>
</html>

